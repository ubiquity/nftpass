pragma solidity ^0.8.9;

interface ITheUbiquityStick {
  ////////////////////////////////////////////////////////////////////////////////////////////////////
  /// @notice EVENTS
  ////////////////////////////////////////////////////////////////////////////////////////////////////
  event SetMinter(address minter);
  event SetTokenURI(uint256 ntype, string newTokenURI);
  event SetTokenMutableURI(uint256 tokenID, string newTokenMutableURI);
  event SetDefaultRoyalty(address receiver, uint96 feeNumerator);
  event SetTokenRoyalty(uint256 tokenID, address receiver, uint96 feeNumerator);

  ////////////////////////////////////////////////////////////////////////////////////////////////////
  /// @notice MINTING
  ////////////////////////////////////////////////////////////////////////////////////////////////////
  function setMinter(address minter_) external;

  function safeMint(address to) external;

  function batchSafeMint(address, uint256) external;

  ////////////////////////////////////////////////////////////////////////////////////////////////////
  /// @notice MUTABLE
  ////////////////////////////////////////////////////////////////////////////////////////////////////
  function setTokenURI(uint256 ntype, string memory newTokenURI) external;

  function setTokenMutableURI(uint256 tokenID, string memory newTokenMutableURI) external;

  ////////////////////////////////////////////////////////////////////////////////////////////////////
  /// @notice ROYALTY
  ////////////////////////////////////////////////////////////////////////////////////////////////////
  function setDefaultRoyalty(address receiver, uint96 feeNumerator) external;

  function setTokenRoyalty(
    uint256 tokenId,
    address receiver,
    uint96 feeNumerator
  ) external;

  function resetTokenRoyalty(uint256 tokenId) external;

  function deleteDefaultRoyalty() external;
}
