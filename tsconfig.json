{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "./artifacts/type",
    "baseUrl": "./",
    "paths": {
      "metadata/*": ["metadata/*"],
      "tests/*": ["tests/*"],
      "types/*": ["types/*"]
    }
  },
  "include": ["./scripts", "./tests", "./deploy"],
  "files": ["hardhat.config.ts"]
}
